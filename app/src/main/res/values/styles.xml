<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Admin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textInputLayout</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">#7CFFFFFF</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="SizeJam" parent="AppTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="StyleText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextJam" parent="StyleText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextUtama</item>
        <item name ="android:textSize">12sp</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="AppTheme.Admin">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

    <style name="Base.Widget.Appcompat.ImageButton" parent="AppTheme">

    </style>

    <style name="StylePrimaryText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/textInputLayout</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StylePrimaryTextDark" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorTextUtama</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


</resources>