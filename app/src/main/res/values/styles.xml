<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Admin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SizeJam" parent="AppTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="StyleText" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextJam" parent="StyleText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextUtama</item>
        <item name ="android:textSize">12sp</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="AppTheme.Admin">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

    <style name="Base.Widget.Appcompat.ImageButton" parent="AppTheme">

    </style>


</resources>